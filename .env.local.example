# Notion API配置 - 请替换为你的实际值
# https://www.notion.so/my-integrations 这里获取apikey
# https://www.notion.so/247c5a0ebbe680c58136e04779dad0a9?v= 中间的一串字符为数据ID

NOTION_API_KEY=ntn_xxx
NOTION_DATABASE_ID=xxx

# 网站基础信息
NEXT_PUBLIC_APP_NAME=NotionBlog
NEXT_PUBLIC_APP_DESCRIPTION=基于Notion的博客系统
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_AUTHOR_NAME=你的名字
NEXT_PUBLIC_AUTHOR_EMAIL=your@email.com

# SEO 配置
NEXT_PUBLIC_KEYWORDS=博客,Notion,技术分享
GOOGLE_SITE_VERIFICATION=your_verification_code

# 社交媒体
NEXT_PUBLIC_TWITTER_HANDLE=@niubiai
NEXT_PUBLIC_GITHUB_URL=https://github.com/aigem

# 功能开关
NEXT_PUBLIC_ENABLE_COMMENTS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# 开发环境配置
NODE_ENV=development

# 主题样式
NEXT_PUBLIC_THEME=tech-blue